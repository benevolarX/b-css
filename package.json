{
  "name": "b-css",
  "version": "0.0.1",
  "description": "small css framework",
  "main": "./src/index.css",
  "engines": {
    "node": ">=4"
  },
  "scripts": {
    "start": "echo 'ok'",
    "build": "npm run build-prod",
    "watch": "sass --watch scss:css",
    "build-full": "npm run build-map & npm run build-prod",
    "build-map": "sass --source-map ./scss/index.scss:./css/b-css.css",
    "build-prod": "sass --no-embed-source-map ./scss/index.scss:./css/test.css",
    "rebuild": "npm run clean && npm run build",
    "clean": "rimraf css/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/benevolarX/b-css.git"
  },
  "keywords": [
    "css",
    "css3",
    "framework",
    "flex",
    "grid",
    "responsive",
    "variable"
  ],
  "author": "benevolar",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/benevolarX/b-css/issues"
  },
  "homepage": "https://github.com/benevolarX/b-css#readme",
  "devDependencies": {
    "rimraf": "^2.6.2"
  },
  "dependencies": {
    "autoprefixer": "^8.6.0",
    "node-sass": "^4.9.0",
    "postcss-cli": "^5.0.0",
    "sass": "^1.5.1"
  }
}
