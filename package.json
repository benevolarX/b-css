{
  "name": "b-css",
  "version": "0.0.1",
  "description": "small css framework",
  "main": "./src/index.css",
  "engines": {
    "node": ">=4"
  },
  "scripts": {
    "start": "sass --trace -t expanded scss/index.scss:css/b-css.css",
    "watch": "sass --trace --sourcemap=none -t expanded --watch scss:css",
    "build": "npm run build-css && npm run build-min && npm run build-prefix && npm run build-cleancss",
    "build-css": "sass --trace --sourcemap=auto -t expanded scss/index.scss css/b-css.css",
    "build-min": "sass --trace --sourcemap=none -t compressed scss/index.scss css/b-css.min.css",
    "build-prefix": "postcss --use autoprefixer --map false --output css/b-css.css css/b-css.css",
    "build-cleancss": "cleancss -o css/b-css.min.css css/b-css.css",
    "rebuild": "npm run clean && npm run build",
    "restart": "npm run clean && npm run start",
    "clean": "rimraf css/* && rimraf .sass-cache/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/benevolarX/b-css.git"
  },
  "keywords": [
    "b-css",
    "small",
    "css",
    "framework",
    "flexbox",
    "grid",
    "responsive",
    "custom-property",
    "lightweight",
    "scss",
    "sass"
  ],
  "author": "benevolar",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/benevolarX/b-css/issues"
  },
  "homepage": "https://github.com/benevolarX/b-css#readme",
  "devDependencies": {
    "rimraf": "^2.6.2"
  },
  "dependencies": {
    "autoprefixer": "^8.6.0",
    "clean-css-cli": "^4.1.11",
    "postcss-cli": "^5.0.0"
  }
}
