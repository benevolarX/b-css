{
  "name": "@benevolar/b-css",
  "version": "0.0.5",
  "description": "small css framework",
  "main": "./scss/index.scss",
  "style": "./css/b-css.min.css",
  "engines": {
    "node": ">=6"
  },
  "scripts": {
    "start": "npm run build-css -- --watch",
    "watch": "npm run build-css -- --watch",
    "build": "npm run build-css && npm run build-min && npm run build-prefix && npm run build-cleancss",
    "build-css": "node-sass --scss --trace --sourcemap=auto -t compact scss/index.scss css/b-css.css",
    "build-min": "node-sass --scss --trace --sourcemap=none -t compressed scss/index.scss css/b-css.min.css",
    "build-prefix": "postcss --use autoprefixer --map false --output css/b-css.css css/b-css.css",
    "build-cleancss": "cleancss -o css/b-css.min.css css/b-css.css",
    "rebuild": "npm run clean && npm run build",
    "restart": "npm run clean && npm run start",
    "clean": "rimraf css/* && rimraf .sass-cache/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/benevolarX/b-css.git"
  },
  "keywords": [
    "b-css",
    "small",
    "css",
    "framework",
    "flexbox",
    "grid",
    "responsive",
    "custom-property",
    "lightweight",
    "itcss",
    "oocss",
    "scss",
    "sass"
  ],
  "author": "benevolar",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/benevolarX/b-css/issues"
  },
  "homepage": "https://github.com/benevolarX/b-css#readme",
  "devDependencies": {
    "autoprefixer": "^9.6.1",
    "clean-css-cli": "^4.3.0",
    "fstream": "^1.0.12",
    "js-yaml": "^3.13.1",
    "node-sass": "^4.12.0",
    "postcss-cli": "^6.1.3",
    "rimraf": "^2.6.3",
    "tar": "^4.4.10"
  },
  "dependencies": {
    "minireset.css": "^0.0.3",
    "normalize.css": "^8.0.1"
  }
}
